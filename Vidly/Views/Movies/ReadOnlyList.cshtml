@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<div>
    <table id="movies" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts
{

    <script>
    $(document).ready(function () {
        var table = $("#movies").DataTable({
            ajax: {
                url: "/api/movies",
                dataSrc: ""
            },
            columns: [
                        {
                            data: "name"                    
                        },
                        {
                            data: "genre.name"
                        }               
                    ]
        });
    });
    </script>

}